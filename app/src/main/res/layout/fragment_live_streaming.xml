<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark"
    android:paddingLeft="6dp"
    android:paddingRight="6dp"
    android:paddingTop="@dimen/fragment_main_padding_top"
    tools:context="com.example.mego.adas.videos.ui.LiveStreamingFragment">

    <ProgressBar
        android:id="@+id/loading_streaming_indicator_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="invisible" />


    <ImageView
        android:id="@+id/live_streaming_image_view"
        android:layout_width="220dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:paddingBottom="20dp"
        android:visibility="gone"
        android:src="@drawable/live_streaming" />

    <TextView
        android:id="@+id/no_live_streaming_video_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/live_streaming_image_view"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        android:text="@string/no_live_streaming_video_now"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp" />

    <FrameLayout
        android:id="@+id/watch_live_video_player"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />


</RelativeLayout>
